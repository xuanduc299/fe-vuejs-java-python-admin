{
  "extends": "@tsconfig/node18/tsconfig.json",
  "include": [
    "vite.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "playwright.config.*"
  ],
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "types": [
      "node"
    ],
    "noEmitOnError": false, // Không dừng quá trình build nếu có lỗi
    "skipLibCheck": true // Bỏ qua kiểm tra kiểu cho các thư viện
  }
}